@model Stranded.Models.Character
@{
    ViewData["Title"] = "Characters";
}

<h1>Characters</h1>
<form asp-action="Character" method="post">
    <div class="container row">
        <div class="col-2">
            <label>Character Name</label>
        </div>
        <div class="col-2">
            <input type="text" asp-for="Name" />
        </div>
        <div class="col-8"></div>
        <div class="col-2">
            <label>Character Model</label>
        </div>
        <div class="col-2">
            <input type="number" asp-for="CharacterModel" />
        </div>
    </div>
    <input type="submit" value="Create"asp-action="Save" />
</form>

