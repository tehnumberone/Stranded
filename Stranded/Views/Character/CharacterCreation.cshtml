@using Stranded.Models
@model Stranded.Models.ViewModels.CharacterCreationViewModel
@{
    ViewData["Title"] = "CharacterCreation";
}

<h1>Characters</h1>
<form asp-action="CharacterCreation" method="post">
    <div class="container row">
        <div class="col-2">
            <label>Character Name</label>
        </div>
        <div class="col-3">
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="col-7"></div>
        <div class="col-2">
            <label>Character Model</label>
        </div>
        <div class="col-4">

            @foreach (var charModel in @Model.CharModels)
            {
                string charmodel = @charModel.characterModel;
                <input type="hidden" id="CharModelInput" asp-for="CharacterModel" value="" />
                <input type="button" class="Char form-control" data-model="@charmodel" style="background-image: url(../images/CharModels/@charmodel )" />
            }
            <br />
            <span asp-validation-for="CharacterModel" class="alert-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="Id" name="Id" />
    <input type="submit" value="Create" />
</form>
