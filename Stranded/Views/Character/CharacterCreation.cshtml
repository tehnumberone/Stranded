@using Stranded.Models
@model Stranded.Models.ViewModels.CharacterCreationViewModel
@{
    ViewData["Title"] = "CharacterCreation";
}

<h1>Characters</h1>
<form asp-action="CharacterCreation" method="post">
    <div class="container row">
        <div class="col-2">
            <label>Character Name</label>
        </div>
        <div class="col-2">
            <input type="text" asp-for="Name" name="Name" />
        </div>
        <div class="col-8"></div>
        <div class="col-2">
            <label>Character Model</label>
        </div>
        <div class="col-4">

            @foreach (var charModel in @Model.CharModels)
            {
                string charmodel = @charModel;
                <input type="hidden" id="CharModelInput" asp-for="CharacterModel" value="" />
                <input type="button" class="Char" data-model="@charmodel" style="background-image: url(../images/CharModels/@charmodel" />
            }
        </div>
    </div>
    <input type="hidden" asp-for="Id" name="Id" />
    <input type="submit" value="Create" asp-action="Save" />
</form>
