@model Stranded.Models.ViewModels.CharacterCreationViewModel
@{
    ViewData["Title"] = "Characters";
}
<h1>Characters</h1>
<form asp-action="CharacterCreation" method="post">
    <div class="container row">
        <div class="col-2">
            <label>Character Name</label>
        </div>
        <div class="col-2">
            <input type="text" asp-for="Name" name="Name" />
        </div>
        <div class="col-8"></div>
        <div class="col-2">
            <label>Character Model</label>
        </div>
        <div class="col-4">
            <input type="text" hidden asp-for="CharacterModel" />
            <button id="Char1" value="" asp-for="CharacterModel" asp-action="Character1Selection"> </button>
            <button id="Char2" value="" asp-for="CharacterModel" asp-action="Character2Selection"> </button>
            <button id="Char3" value="" asp-for="CharacterModel" asp-action="Character3Selection"> </button>
        </div>
    </div>
    <input type="hidden" asp-for="Id" name="Id" />
    <input type="submit" value="Create" asp-action="Save" />
</form>

