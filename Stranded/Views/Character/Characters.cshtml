@model Stranded.Models.ViewModels.CharacterViewModel
@{
    ViewData["Title"] = "Characters";
}

<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>Characters</title>
    <link rel="stylesheet" href="css/site.css" />
</head>
<body>
    @foreach (var character in Model.Characters)
    {
        <table class="table table-bordered table-dark" style="width: 100%">
            <tr>
                <th>Character Name</th>
                <th>Character Model</th>
            </tr>
            <tr>
                <td>@character.Name</td>
                <td> <img src="../images/CharModels/@character.CharacterModel"/></td>
            </tr>
            <tr>
                <td>
                    <form method="get" asp-for="@character.Id" asp-controller="Map" asp-action="LoadMap">
                        <input type="hidden" name="Id" value="@character.Id" />
                        <input type="submit" value="Play" />
                    </form>
                </td>
                <td>
                    <form method="post" asp-for="@character.Id" asp-controller="Character" asp-action="RemoveCharacter">
                        <input type="hidden" name="Id" value="@character.Id" />
                        <input type="submit" value="Delete" />
                    </form>
                </td>
            </tr>
        </table>
    }
</body>
</html>
