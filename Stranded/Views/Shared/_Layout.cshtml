@using Microsoft.AspNetCore.Http;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Stranded</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <div class="nav-container">
            <nav id="navi" class="navbar navbar-expand-sm border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">Stranded</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Character" asp-action="CharacterCreation"></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Character" asp-action="Characters">Characters</a>
                            </li>
                            @if (Context.Session.GetString("Username") == "Admin")
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link" asp-controller="Item" asp-action="AllItems">Items</a>
                                    <div class="dropdown-menu">
                                        <a class="nav-link" asp-controller="Item" asp-action="AllItems">Items</a>
                                        <a class="nav-link" asp-controller="Item" asp-action="CreateItem">Create Item</a>
                                    </div>
                                </li>
                                <li>
                                    <a class="nav-link" asp-controller="Account" asp-action="AllAccounts">All Accounts</a>
                                </li>
                            }
                            @if (Context.Session.GetString("Username") == null)
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2019 - Stranded - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
