@using Stranded.Models.ViewModels
@model Stranded.Models.ViewModels.ItemCreationViewModel
@{
    ViewData["Title"] = "ItemCreation";
}

<h1>Item Creation Tool</h1>
<form asp-controller="Item" asp-action="Save" method="post" enctype="multipart/form-data">
    <div class="container row">
        <div class="col-2">
            <label>Item Name</label>
        </div>
        <div class="col-5">
            <input type="text" asp-for="Name" />
            <br />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-5"></div>
        <br />
        <div class="col-2">
            <label>Item Type</label>
        </div>
        <div class="col-5">
            <select asp-for="ItemType"
                    asp-items="Html.GetEnumSelectList<ItemType>()">
                <option></option>
            </select>
            <br />
            <span asp-validation-for="ItemType" class="text-danger"></span>
        </div>
        <div class="col-5"></div>
        <br />
        <div class="col-2">
            <label>Item Image</label>
        </div>
        <div class="col-5">
            @Html.EditorFor(model => model.ImageFile)
            <input type="hidden" asp-for="ImageFile"/>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>
    </div>
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Create" />
</form>
